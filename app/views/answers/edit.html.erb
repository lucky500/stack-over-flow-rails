<h3>Edit Answer</h3>

<%= form_for ([@question, @answer]) do |f| %>
  <div class="form-group">
    <%= f.text_area :body_text, required: true, placeholder: "Answer", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
