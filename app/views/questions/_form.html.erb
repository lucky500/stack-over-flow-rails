<%= form_for @question do |f| %>
  <div class="form-group">
    <%= f.text_field :title, required: true, placeholder: "Question Title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, required: true, placeholder: "Description", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
